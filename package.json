{
  "name": "agent-ui",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "bun run --cwd apps/web-view dev",
    "build:web": "bun run --cwd apps/web-view build",
    "dev:cli": "bun run --cwd apps/cli dev",
    "dev:backend": "bun run --env-file apps/backend/.env.local --cwd apps/backend dev",
    "generate:backend": "bun run --env-file apps/backend/.env.local --cwd apps/backend generate",
    "cli": "bun run --cwd apps/cli dev",
    "check": "bun run typecheck && bun run lint && bun run format",
    "check:web": "bun run typecheck:web && bun run lint:web && bun run format:web",
    "check:cli": "bun run typecheck:cli && bun run lint:cli && bun run format:cli",
    "check:backend": "bun run typecheck:backend && bun run lint:backend && bun run format:backend",
    "check:shared": "bun run typecheck:shared && bun run lint:shared && bun run format:shared",
    "typecheck": "bun run typecheck:web && bun run typecheck:cli && bun run typecheck:backend && bun run typecheck:shared",
    "typecheck:web": "bun run --cwd apps/web-view typecheck",
    "typecheck:cli": "bun run --cwd apps/cli typecheck",
    "typecheck:backend": "bun run --cwd apps/backend typecheck",
    "typecheck:shared": "tsc -p shared/component-schema/tsconfig.json --noEmit",
    "lint": "bun run lint:web && bun run lint:cli && bun run lint:backend && bun run lint:shared",
    "lint:web": "bunx eslint apps/web-view",
    "lint:cli": "bunx eslint apps/cli",
    "lint:backend": "bunx eslint apps/backend",
    "lint:shared": "bunx eslint shared/component-schema",
    "lint:fix": "bunx eslint . --fix",
    "format": "bun run format:web && bun run format:cli && bun run format:backend && bun run format:shared",
    "format:web": "bunx prettier apps/web-view --write --log-level warn",
    "format:cli": "bunx prettier apps/cli --write --log-level warn",
    "format:backend": "bunx prettier apps/backend --write --log-level warn",
    "format:shared": "bunx prettier shared/component-schema --write --log-level warn",
    "format:check": "bunx prettier . --check",
    "format:check:quiet": "bunx prettier . --check --log-level silent",
    "format:check:web": "bunx prettier apps/web-view --check",
    "format:check:web:quiet": "bunx prettier apps/web-view --check --log-level silent",
    "format:check:cli": "bunx prettier apps/cli --check",
    "format:check:cli:quiet": "bunx prettier apps/cli --check --log-level silent",
    "data:pull": "bun run --env-file apps/backend/.env.local --cwd apps/backend pull",
    "data:create": "bun run --env-file apps/backend/.env.local scripts/changesets/create-from-local.ts",
    "data:validate": "bun run --env-file apps/backend/.env.local scripts/changesets/validate.ts",
    "data:diff": "bun run --env-file apps/backend/.env.local scripts/changesets/diff.ts",
    "data:publish": "bun run --env-file apps/backend/.env.local scripts/changesets/publish.ts"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "^1.3.9",
    "eslint": "^10.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "convex": "1.32.0",
    "fuse.js": "^7.1.0",
    "zod": "^4.3.6"
  }
}
